        android:label="@string/app_name"
        android:roundIcon="@drawable/janoabonce"
        android:supportsRtl="true"
        android:theme="@style/Theme.JanoAbonce"
        tools:targetApi="31">
        <activity
            android:name=".Ayuda"
            android:exported="false"
